# Business Idea Generator App - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ================================
# API Keys (Required)
# ================================

# OpenAI API Key (for idea generation)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (alternative AI provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter API Key (for multiple AI models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Perplexity API Key (for market research)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ================================
# Application Configuration
# ================================

# Server Port
PORT=3000

# Node Environment
NODE_ENV=development

# Application Secret (for sessions, JWT, etc.)
APP_SECRET=your_app_secret_key_minimum_32_chars

# ================================
# Database Configuration
# ================================

# Database URL (SQLite for local development)
DATABASE_URL=sqlite:./data/app.db

# Database encryption key
DB_ENCRYPTION_KEY=your_database_encryption_key_here

# ================================
# Security Configuration
# ================================

# CORS Origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_chars
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your_session_secret_minimum_32_chars
SESSION_MAX_AGE=86400000

# ================================
# AI Service Configuration
# ================================

# AI Model Configuration
DEFAULT_AI_MODEL=gpt-3.5-turbo
BACKUP_AI_MODEL=claude-3-haiku-20240307

# AI Request Limits
AI_REQUEST_TIMEOUT=30000
AI_MAX_TOKENS=2000

# ================================
# Logging Configuration
# ================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/app.log

# ================================
# Development Configuration
# ================================

# Enable Debug Mode
DEBUG=false

# Enable Hot Reload
HOT_RELOAD=true

# API Base URL (for frontend)
API_BASE_URL=http://localhost:3001

# ================================
# Security Headers Configuration
# ================================

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'

# ================================
# File Upload Configuration
# ================================

# Maximum file size (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types
ALLOWED_FILE_TYPES=.txt,.json,.md

# Upload directory
UPLOAD_DIR=./uploads

# ================================
# Email Configuration (optional)
# ================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ================================
# Analytics Configuration (optional)
# ================================

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id

# ================================
# External Services (optional)
# ================================

# Market data API
MARKET_DATA_API_KEY=your_market_data_api_key

# News API for market research
NEWS_API_KEY=your_news_api_key

# ================================
# Feature Flags
# ================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable AI market analysis
ENABLE_AI_MARKET_ANALYSIS=true

# Enable user analytics
ENABLE_USER_ANALYTICS=false